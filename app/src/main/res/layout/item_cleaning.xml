<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="15dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_cleaning_banner"
                    android:layout_width="139dp"
                    android:layout_height="154dp"
                    android:src="@drawable/img_wash" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_cleaning_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_secondary_orange"
                    android:text="10 % OFF"
                    android:layout_margin="7dp"
                    android:textSize="12sp"
                    android:paddingHorizontal="4dp"
                    android:textColor="@color/white" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_cleaning_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Cleaning"
            android:textColor="@color/dark_1"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>